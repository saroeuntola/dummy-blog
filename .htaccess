# ===============================
# 1️⃣ Hide .php extension
# ===============================
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # -----------------------------------------
    # Redirect index.php or /index to root (/)
    # -----------------------------------------
    
    RewriteCond %{THE_REQUEST} \s/+(index(\.php)?)([\s?]|$) [NC]
    RewriteRule ^index(\.php)?$ / [R=301,L]
  
    # -----------------------------------------
    # Sitemap clean URL
    # -----------------------------------------


    # -----------------------------------------
    # Redirect .php requests to extensionless
    # -----------------------------------------
    RewriteCond %{THE_REQUEST} \s/+([^\s?]+)\.php[\s?] [NC]
    RewriteRule ^ %1 [R=301,L]

    # -----------------------------------------
    # Internally map extensionless to .php
    # -----------------------------------------
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.*)$ $1.php [L]
</IfModule>

# ===============================
# 2️⃣ Basic Speed Optimization
# ===============================

# 2a. Enable Gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# 2b. Leverage browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/html "access plus 600 seconds"
</IfModule>

# 2c. Enable keep-alive
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>

# 2d. Prevent directory browsing
Options -Indexes

# 2e. Security headers (basic)
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
</IfModule>

